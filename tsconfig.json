{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    },
    "types": ["node"]
  },
  "include": ["electron.vite.config.ts", "src/**/*", "env.d.ts", "tests/**/*"],
  "exclude": ["dist", "node_modules"]
}
